{
    "name": "reactive-forms",
    "private": true,
    "version": "0.5.7",
    "description": "Complex forms with React? Easy!",
    "author": "Artiom Tretjakovas",
    "license": "MIT",
    "repository": "ArtiomTr/reactive-forms",
    "scripts": {
        "build": "turbo run build --scope=@reactive-forms/*",
        "test": "turbo run test --scope=@reactive-forms/*",
        "docs:gen": "node docs/tools/docgen/docgen.js --exclude \"src/typings/*\" --exclude \"src/utils/*\" --exclude \"src/**/index.ts\" --base src --tsconfig=./tsconfig.json --out=./packages/docs/pages/api-reference src/**/*.ts src/**/*.tsx",
        "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
        "size": "npm run build && size-limit",
        "size:analyze": "size-limit --why",
        "lint": "eslint .",
        "publish": "zxpp ./scripts/publish.ts",
        "publish:check": "turbo run build lint test --scope=@reactive-forms/* --include-dependencies --no-deps"
    },
    "size-limit": [
        {
            "path": "packages/core/dist/core.cjs.production.min.js",
            "limit": "30 KB"
        },
        {
            "path": "packages/core/dist/core.esm.js",
            "limit": "30 KB"
        }
    ],
    "devDependencies": {
        "@reactive-tools/eslint-config": "*",
        "@size-limit/preset-small-lib": "^4.10.2",
        "@types/inquirer": "^8.1.3",
        "@types/jest": "^26.0.23",
        "@types/micromatch": "^4.0.1",
        "@types/semver": "^7.3.7",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "danger": "^10.6.4",
        "inquirer": "^7.3.3",
        "micromatch": "^4.0.4",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "semver": "^7.3.5",
        "size-limit": "^4.10.2",
        "turbo": "^1.0.28",
        "typescript": "^4.3.4",
        "zxpp": "^0.1.6"
    },
    "workspaces": [
        "packages/*",
        "tools/*"
    ],
    "packageManager": "npm@7.19.1"
}
