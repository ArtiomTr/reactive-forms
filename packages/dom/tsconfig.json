{
	"compilerOptions": {
		"module": "CommonJS",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"jsx": "react",
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"importHelpers": true,
		"skipLibCheck": true
	},
	"include": ["src", "tests"]
}
