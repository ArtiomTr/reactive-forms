{
    "name": "@reactive-forms/core",
    "version": "0.8.11",
    "description": "Core package of Reactive Forms framework",
    "author": "ReactiveForms team",
    "homepage": "https://github.com/ArtiomTr/reactive-forms#readme",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/core.esm.js",
    "source": "src/index.ts",
    "types": "dist/core.d.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ArtiomTr/reactive-forms.git"
    },
    "scripts": {
        "dev": "aqu watch --no-cleanup",
        "build": "aqu build",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --passWithNoTests --watch",
        "test:coverage": "jest --passWithNoTests --coverage --json --silent --ci --outputFile=\"report.json\"",
        "test:log-coverage": "jest --passWithNoTests --coverage --silent --ci --coverageReporters=text",
        "lint": "eslint .",
        "lint:fix": "npm run lint --fix",
        "prepublish": "reactive-publisher"
    },
    "bugs": {
        "url": "https://github.com/ArtiomTr/reactive-forms/issues"
    },
    "dependencies": {
        "lodash": "^4.17.19",
        "lodash-es": "^4.17.15",
        "pxth": "^0.6.0",
        "stocked": "^1.0.0-beta.28",
        "tiny-invariant": "^1.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@reactive-tools/eslint-config": "workspace:*",
        "@reactive-tools/publisher": "workspace:*",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.161",
        "@types/react": "18.0.23",
        "aqu": "^0.4.3",
        "jest": "^29.2.2",
        "react": "18.2.0",
        "ts-jest": "^29.0.3",
        "tslib": "^2.3.1",
        "typescript": "^4.8.4",
        "yup": "^0.32.9"
    },
    "peerDependencies": {
        "react": ">=16"
    }
}
