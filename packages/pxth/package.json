{
	"name": "pxth",
	"version": "0.9.0",
	"description": "Tiny utility library for object property path handling",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"require": {
			"types": "./dist/index.d.cts",
			"require": "./dist/index.cjs"
		}
	},
	"keywords": [
		"deep",
		"object",
		"path",
		"utility",
		"nested"
	],
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup && cpy ./dist/index.d.ts . --rename index.d.cts",
		"start": "pnpm build --watch",
		"lint": "eslint . && attw --pack .",
		"lint:fix": "eslint . --fix",
		"test": "vitest run --typecheck",
		"prepare": "pnpm build",
		"release": "np",
		"size": "size-limit",
		"size:why": "size-limit --why"
	},
	"author": "Artiom Tretjakovas",
	"license": "MIT",
	"homepage": "https://github.com/fracht/reactive-forms/tree/main/packages/pxth#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fracht/reactive-forms.git",
		"directory": "packages/pxth"
	},
	"bugs": {
		"url": "https://github.com/fracht/reactive-forms/issues"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.16.4",
		"@microsoft/api-extractor": "^7.47.11",
		"@types/lodash": "^4.17.12",
		"@types/node": "^20.17.2",
		"cpy-cli": "^5.0.0",
		"eslint": "^9.13.0",
		"np": "^10.0.7",
		"tsup": "^8.3.5",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"tiny-invariant": "^1.3.3"
	}
}
